<!DOCTYPE html>
<html lang="en">
  <%= erb :header, :layout => false %>
  <body>
    <div class="container">

      <form class="form-sendbanana" action="/request" method="post">
        <h2 class="form-sendbanana-heading">Share a Banana <img class="inline-banana" src="/img/inline_banana.png"></img></h2>
        <input type="text" class="input-block-level" placeholder="Receiver's email address" name="receiving_address">
	<input type="text" class="input-block-level" placeholder="Your name" name="sending_name">
        <input type="text" class="input-block-level" placeholder="Your email address" name="sending_address">
        <%= recaptcha_tag :challenge, :width => 200, :height => 100, :display => { :theme => 'clean' } %>
        <%= recaptcha_tag :noscript, :width => 200, :height => 100, :display => { :theme => 'clean' } %>
        <button class="btn btn-large btn-primary" type="submit">Send</button>
      </form>
      <%= erb :footer, :layout => false %>
    </div>
  </body>
</html>
